<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de Bases de Datos</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Gestión de Bases de Datos</h1>
  </header>
  <main>
    <form action="/crear-db" method="POST">
      <label for="dbName">Nombre de la nueva Base de Datos:</label>
      <input type="text" id="dbName" name="dbName" required>
      <button type="submit">Crear Base de Datos</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>Nombre de la Base de Datos</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% databases.forEach(database => { %>
          <tr>
            <td><%= database.Database %></td>
            <td>
              <form action="/ver-db" method="GET" style="display:inline;">
                <input type="hidden" name="dbName" value="<%= database.Database %>">
                <button type="submit" class="view">Ver</button>
              </form>
              <form action="/borrar-db" method="POST" style="display:inline;">
                <input type="hidden" name="dbName" value="<%= database.Database %>">
                <button type="submit" onclick="return confirm('¿Estás seguro de que deseas borrar esta base de datos?');">Borrar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>
